{
  "compilerOptions": {
    "target": "es2016",
    "module": "node18",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "isolatedModules": true
  }
}
